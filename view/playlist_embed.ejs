<html>
<head>
	<title>Cherry Music - Playlist</title>
	<meta charset="UTF-8">
	
	<%- include('google_analytics.ejs') %>

	<meta name="description" content="New way to listen to Youtube music">
	<meta name="keywords" content="">
	<meta property="og:title" content="Cherry Music" />
	<meta property="og:description" content="New way to listen to Youtube music">

	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" type="text/css" href="/css/style.css">

	<%- include('common_resources.ejs') %>
	<script type="text/javascript" src="/js/util.js"></script>
	<% if(dev_mode){ %>
		<script type="text/javascript" src="/js/const/country_code.js"></script>
		<script type="text/javascript" src="/js/const/country_data.js"></script>
		<script type="text/javascript" src="/js/const/country_control.js"></script>
		<script type="text/javascript" src="/js/lang.js"></script>
	
		<script type="text/javascript" src="/js/youtube_iframe_player.js"></script>
		<script type="text/javascript" src="/js/router.js"></script>
		<script type="text/javascript" src="/js/cherry_player.js"></script>
	
		<!-- control.js 항상 마지막에 위치해야 함. -->
		<script type="text/javascript" src="/js/playlist_embed_control.js"></script>
	<% } else { %>
		<script type="text/javascript" src="/js/playlist_embed_min.js"></script>
	<% } %>
</head>
<body class="border">
	<script>new CountryControl().LoadCountryCode()</script>

	<!-- PLAYER MUSIC LIST -->
	<div style="height: calc(100% - 100px)">
		<div class="container" style="height: 100%; overflow-y: auto">
			<div class="row border-bottom pt-1" style="font-size: 0.8em;">
				<div class="col-6"><h5>Playlist</h5></div>
				<div class="col-6 text-right"><a href="https://cherrymusic.io">cherrymusic.io</a></div>
			</div>
			<div class="row border-bottom">
				<div class="col-12 text-center" style="padding-top: 5px;">
					<h5 id="id_label_playlist_embed_title"></h5>
				</div>
				<div class="col-12" id="id_label_playlist_embed_comment">
				</div>
			</div>
			<div class="row">
				<div class="col-12 px-0">
					<div class="container-fluid" id="id_div_cherry_player_music_list"></div>
				</div>
			</div>
		</div>
	</div>


	<!-- toast -->
	<div class="cherry_toast">
		<div id="id_cherry_toast_text" style="width:auto;	background-color: white;	border: 1px solid gray;		border-radius: 1em;	"></div>
	</div>
	
	<!-- PLAYER -->
	<div class="slider_line_div">
		<div class="slider_fill" id="id_slider_fill">&nbsp</div>
	</div>
	<div class="player_div">
		<div class="player_video_div">
			<div id="player" style="width: 100; height: 100; border: 1px solid black;"></div>
		</div>
		<div class="player_info_div">
			<div id="id_label_title">Title</div>
			<div id="id_label_artist" class="label_artist">Artist</div>
		</div>	
		<div class="controller_div text-right">
			<div>
				<i id="id_btn_play_pause" class="fas fa-play          play_button_disabled" style="margin-left: 1px; margin-right: 1px; display:none"></i>
				<i id="id_btn_next"       class="fas fa-step-forward  play_button_disabled"></i>
			</div>
			<div style="padding-top: 4px;">
				<button type="button" class="btn btn-sm btn-dark" id="id_btn_seq_type">
					<i id="id_icon_seq_type" class="fas fa-sort-numeric-down"></i>
				</button>
				<button type="button" class="btn btn-sm btn-dark" id="id_btn_repeat_type">
					<i id="id_icon_repeat_type" class="fas fa-reply-all"></i>
				</button>
			</div>
			<div style="padding-top: 4px;">
				<button type="button" class="btn btn-sm btn-dark" id="id_btn_volume">
					<i class="fas fa-volume-up"></i>
				</button>
				<!-- <button type="button" class="btn btn-sm btn-dark" id="id_btn_playlist_show_hide">
					<i class="fas fa-list"></i>
				</button> -->
			</div>
		</div>
	</div>


	<!-- Volume Control -->
	<div class="player_volume_div" style="background-color: white; height: 30px; padding-top: 5px; border: solid 1px gray;">
		<div style="width: 100%; padding-left: 50px; padding-right: 50px;">
			<input type="range" min="0" max="100" value="50" class="slider" id="id_slider_volume">
		</div>
	</div>
</body>

<script>
	$('document').ready(function(){
		window._playlist_embed_control = new PlaylistEmbedControl(<%= playlist_uid %>).Init();
	});
</script>
	