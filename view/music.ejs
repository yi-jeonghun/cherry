<div class="container">
	<div class="row">
		<div class="col-6">
			<img src="" style="width: 120px; height: 120px;" id="id_img_music">
		</div>
		<div class="col-6 text-right py-5">
			<button class="btn btn-sm btn-light" onClick="window._music_control.Like()">
				<i id="id_icon_music_heart-<%=music_uid%>" style="color: #bbbbbb; font-size: 1.4em;" class="fas fa-heart"></i>
			</button>
			<button type="button" class="btn btn-sm btn-primary" id="id_btn_music_plus" onClick="window._music_control.ListenMusic()">
				<i style="margin-left:3px" class="fas fa-plus"></i>
			</button>	
		</div>
	</div>
	<div class="row">
		<div class="col-12" style="text-align: center;">
			<span id="id_label_music_title" style="font-size: 1.4em; font-weight: bold;"></span>
		</div>
	</div>
	<div class="row">
		<div class="col-12" style="text-align: center;">
			<span id="id_label_music_artist" style="font-size: 1em;"></span>
		</div>
	</div>

	<div class="border-top border-bottom text-right"><b>Lyrics</b></div>

	<div id="id_div_music_lyrics"></div>

	<div class="border-top py-3">
		<h4>Correction Request</h4>
		<button class="btn btn-danger m-1" onClick="window._music_control.Correct('lyrics')">Lyrics Type-o</button>
		<button class="btn btn-danger m-1" onClick="window._music_control.Correct('ads')">Remove Advertisement</button>
		<button class="btn btn-danger m-1" onClick="window._music_control.Correct('video')">Youtube Link Broken</button>
	</div>
</div>

<script type="text/javascript" src="/js/music_control.js"></script>
<script>
$('document').ready(function(){
	window._music_control = new MusicControl('<%=music_uid%>').Init();
});
</script>