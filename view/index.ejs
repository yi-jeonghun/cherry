<html>
<head>
	<title>Cherry</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" type="text/css" href="/css/style.css">

	<%- include('common_resources.ejs') %>

	<script type="text/javascript" src="js/const.js"></script>
	<script type="text/javascript" src="js/youtube_iframe_player.js"></script>

</head>
<body>
	<div class="main_div">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h1 class="cherry_title">Cherry</h1>
				</div>
			</div>
			<div class="row menu_bar">
				<div class="col-12">
					<ul class="nav nav-tabs">
						<li class="nav-item">
							<a class="nav-link hand active" id="nav_kpop" onclick='_router.Go("kpop")'>
								KPop Top 100
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link hand" id="nav_pop" onclick='_router.Go("pop")'>
								Billboard Top 100
							</a>
						</li>
					</ul>
				</div>
			</div>
		
			<!-- id를 router라는 단어가 들어가게 만들기. -->
			<div id="id_dst_kpop" style="display: none; padding: 5px;">
				kpop
			</div>
			<div id="id_dst_pop" style="display: none; padding: 5px;">
				pop
			</div>
		</div>	
	</div>

	<!-- PLAYER -->
	<div class="slider_line_div">
		<div class="slider_fill" id="id_slider_fill">&nbsp</div>
	</div>
	<div class="player_div">
		<div class="player_video_div">
			<div id="player" style="width: 100; height: 100; border: 1px solid black;"></div>
		</div>
		<div class="player_info_div">
			<div id="id_label_title">Title</div>
			<div id="id_label_artist" class="label_artist">Artist</div>
			<!-- <div class="slider_div">
				<div class="text-right" id="id_div_duration">00:00</div>
				<div>
					<input class="slider" id="id_slider" type="range" min="0" max="100" value="0" step="0.01">
				</div>
			</div> -->
		</div>	
		<div class="controller_div text-right">
			<div>
				<i id="id_btn_prev"       class="fas fa-step-backward play_button_disabled"></i>
				<i id="id_btn_play_pause" style="margin-left: 1px; margin-right: 1px" class="fas fa-play          play_button_disabled"></i>
				<i id="id_btn_next"       class="fas fa-step-forward  play_button_disabled"></i>
			</div>
			<div>
				<span class="badge badge-primary" id="id_btn_seq_type" style="cursor: pointer;">Seq</span>
				<span class="badge badge-primary" id="id_btn_repeat_type" style="cursor: pointer;">All</span>
			</div>
			<div>
				<button type="button" class="btn btn-sm btn-light" id="id_btn_playlist_show_hide">
					<i class="fas fa-list"></i>
				</button>
			</div>
		</div>
	</div>

	<!-- PLAYER MUSIC LIST -->
	<div class="player_music_list" id="id_player_music_list_div">
		<div class="container">
			<div class="" id="id_div_music_list">
		</div>
	</div>
	
</body>
</html>

<script type="text/javascript" src="js/router.js"></script>
<script type="text/javascript" src="js/cherry_player.js"></script>
<script type="text/javascript" src="js/control.js"></script>

<script>
	$('document').ready(function(){
		_router.Go("kpop");
	});
</script>