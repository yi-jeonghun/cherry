<html>
<head>
	<%- include('../common_resources.ejs') %>
	<script src="/js/util.js"></script>

	<!-- 순서 주위 -->
	<script type="text/javascript" src="/js/const/country_code.js"></script>
	<script type="text/javascript" src="/js/const/country_data.js"></script>
	<script type="text/javascript" src="/js/lang.js"></script>
	<script type="text/javascript" src="/js/util.js"></script>
	<!-- 순서 주위 -->
	<link rel="stylesheet" type="text/css" href="/css/cms_style.css">
	<link rel="stylesheet" type="text/css" href="/css/slider.css">
</head>
<body style="width: 100%; height: 100%;">
	<div class="container-fluid" style="height: 100%; width:100%; overflow: hidden;">
		<div class="row border" style="height: 30px;">
			<div class="col-12">
				<%- include('menu.ejs') %>
			</div>
		</div>

		<div class="row border" style="height: 70px;">
			<div class="col-3 my-auto">
				<h1>Music</h1>
			</div>
			<div class="col-9 my-auto">
				<i class="border p-1 pointer" id="id_btn_music_no_lyrics" onClick="window._music_control.GetMusicList_NoLyrics(false)">No Lyrics</i>
				<i class="border p-1 pointer" id="id_btn_music_correction" onClick="window._music_control.GetMusicList_Correction()">Correction</i>
				<input type="text" id="id_text_for_copy_text" size="1">
			</div>
		</div>

		<div class="border d-flex" style="height: calc(100% - 100px); overflow: hidden; padding:0px; margin: 0px;">
			<!-- MUSIC LIST -->
			<div class="border col-6" style="height: 100%; overflow: hidden; padding: 0px;">
				<div style="width: 100%; height: calc(100% - 100px); overflow: auto;">
					<div class="border">Total : <span id="id_label_cms_music_total"></span></div>
					<div class="border" id="id_div_cms_music_list"></div>	
				</div>
				<!-- PLAYER TEST -->
				<div id="id_div_play_test" class="d-flex" style="width: 100%; height: 100px;">
					<div id="player" class="border" style="width: 90; height: 90;"></div>
					<div>
						<i id="id_btn_play_pause" class="fas fa-play play_button_disabled" style="margin-left: 1px; margin-right: 1px; font-size: 2em;"></i>
					</div>
					<div class="border" style="width: 100%;">
						<div class="border" style="width: 100%; height: 40px; padding-top: 5px;">
							<div class="slider_filler border" id=""></div>
							<input class="border slider" type="range" min="0" max="10000" value="0" id="id_slider_range">
						</div>
						<div style="width: 100%;">
							<i class="fas fa-volume-up"></i>
							<input type="range" min="0" max="100" value="50" class="" id="id_slider_volume">
						</div>
						<div id="id_div_duration"></div>
					</div>
				</div>
			</div>

			<!-- RIGHT -->
			<div class="col-6">
				<!-- GOOGLE SEARCH -->
				<iframe class="border" style="display:none; width: 100%; height: 100%; overflow: auto" id="id_iframe_music_google_search"></iframe>
				<!-- YOUTUBE SEARCH -->
				<div class="border" style="display:none; width: 100%; height: 100%; overflow: auto;" id="id_div_youtube_search_result"></div>
			</div>
		</div>
	</div>
</body>
</html>

<div id="id_modal_cms_music_lyrics" class="modal small" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
					<span id="id_modal_cms_music_lyrics_artist"></span> -
					<span id="id_modal_cms_music_lyrics_title"></span>
				</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <textarea style="width: 100%; height: 500px;" id="id_input_cms_music_lyrics"></textarea>
				<div id="id_div_lyrics_conv"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="id_btn_cms_music_lyrics_ok">OK</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/youtube_iframe_player.js"></script>
<script type="text/javascript" src="/js/cherry_player.js"></script>
<script type="text/javascript" src="/js/slider_control.js"></script>
<script type="text/javascript" src="/js/youtube_search_control.js"></script>
<script type="text/javascript" src="/__cms/js/cms_music_control.js"></script>
