<html>
<head>
	<%- include('../common_resources.ejs') %>
	<script src="/js/util.js"></script>

	<!-- 순서 주위 -->
	<script type="text/javascript" src="/js/const/country_code.js"></script>
	<script type="text/javascript" src="/js/const/country_data.js"></script>
	<script type="text/javascript" src="/js/lang.js"></script>
	<!-- 순서 주위 -->
	<link rel="stylesheet" type="text/css" href="/css/cms_style.css">
</head>
<body style="width: 100%; height: 100%;">
	<div class="container-fluid" style="height: 100%; width:100%; overflow: hidden;">
		<div class="row border" style="height: 30px;">
			<div class="col-12">
				<%- include('menu.ejs') %>
			</div>
		</div>

		<div class="row border" style="height: 70px;">
			<div class="col-3 my-auto" style="">
				<h5>Artist</h5>
			</div>
			<div class="col-9 my-auto text-right" style="">
				<button type="button" class="btn btn-sm border" id="id_btn_cms_artist_add">Add</button>
			</div>
		</div>

		<div class="row" style="height: calc(100% - 100px); overflow: hidden;">
			<!-- LEFT -->
			<div class="col-7 border" style="height: 100%;">
				<div class="container-fluid px-0" style="height: 100%;">
					<div class="row" style="height: 100%;">
						<!-- ARTIST LIST -->
						<div class="col-4 border-right" style="height: 100%; padding-top: 5px;">
							<ul class="nav nav-tabs small">
								<li class="nav-item">
									<a class="nav-link active" href="#" id="id_nav_cms_artist_list_favorite">Favorites</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="#" id="id_nav_cms_artist_list_search">Search</a>
								</li>
							</ul>
							<div id="id_div_cms_artist_favorites_list">

							</div>
							<div id="id_div_cms_artist_search" style="display:none">
								<input type="text" class="form-control small" placeholder="Artist" aria-label="Artist" aria-describedby="button-addon4" id="id_input_artist_keyword">
								<div id="id_div_cms_artist_search_list"></div>
							</div>
						</div>
						<!-- ARTIST INFO / MUSIC LIST -->
						<div class="col-8 small" style="height: 100%; overflow: auto;">
							<div class="border-bottom pt-1 d-flex">
								<div class="col-8">
									<div>Artist : <span id="id_label_cms_artist_name"></span></div>
									<div>Is Various : <span id="id_label_cms_artist_is_various"></span></div>
									<!-- VA Member list -->
									<div id="id_div_cms_artist_member_list"></div>
								</div>
								<!-- Diff Name List -->
								<div class="col-4 border-left">
									<div class="text-right"><span class="badge badge-sm border" id="id_btn_cms_artist_diff_name_add" style="cursor:pointer">+</span></div>
									<div id="id_div_cms_artist_diff_name_list"></div>
								</div>
							</div>
							<div id="id_div_music_list"></div>
						</div>
					</div>
				</div>
			</div>

			<!-- RIGHT -->
			<div class="col-5 border" style="height: 100%;">
				<div class="container-fluid" style="height: 100%;">
					<!-- PLAYER TEST -->
					<div class="row border" style="height: 100px;">
						<div class="col-12">
							<div id="id_div_play_test"             style="overflow: auto; width: 100%; border-top: 1px solid black; display: flex;">
								<div id="player" style="width: 90; height: 90; border: 1px solid black;"></div>
								<div>
									<i id="id_btn_play_pause" class="fas fa-play          play_button_disabled" style="margin-left: 1px; margin-right: 1px; font-size: 2em;"></i>
								</div>
								<div class="border" style="width: 100%;">
									<div class="slider_line_div border" style="width: 100%; height: 20px; background-color: aqua;">
										<div class="slider_fill" id="id_slider_fill" style="height: 100%; width: 0%; background-color: red;	font-size: 2px;">&nbsp</div>
									</div>
									<div style="width: 100%;">
										<i class="fas fa-volume-up"></i>
										<input type="range" min="0" max="100" value="50" class="slider" id="id_slider_volume">
									</div>
									<div id="id_div_duration"></div>
								</div>
							</div>					
						</div>
					</div>

					<!-- Title / Youtube Search Button -->
					<div class="d-flex" style="height: 40px;">
						<div class="col-2 my-auto">Title</div>
						<div class="col-8 my-auto">
							<input type="input" class="w-100" id="id_input_music_search_keyword">
						</div>
						<div class="col-2 my-auto text-right"><button type="button" class="btn btn-sm btn-primary" id="id_btn_search_youtube">Youtube</button></div>
					</div>

					<!-- YOUTUBE SEARCH -->
					<div class="row border" style="height: calc( 100% - 140px); overflow: auto; ">
						<div class="col-12" >
							<div id="id_div_youtube_search_result">
								Youtube search
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>

<div id="id_modal_cms_artist_edit" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Artist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input class="form-control" id="id_input_cms_artist_name">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="id_btn_cms_artist_edit_ok">OK</button>
      </div>
    </div>
  </div>
</div>

<div id="id_modal_cms_artist_music_edit" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Music</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<div>Title</div>
				<div>
					<input class="form-control" id="id_input_cms_artist_music_title">
				</div>
				<div>Video ID</div>
				<div>
					<input class="form-control" id="id_input_cms_artist_music_video_id">
				</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="id_btn_cms_artist_music_edit_ok">OK</button>
      </div>
    </div>
  </div>
</div>

<div id="id_modal_cms_artist_diff_name_edit" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Artist Different Name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<input class="form-control" id="id_input_cms_artist_diff_name" autocomplete="off">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="id_btn_cms_artist_diff_name_edit_ok">OK</button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript" src="/js/youtube_iframe_player.js"></script>
<script type="text/javascript" src="/js/cherry_player.js"></script>
<script type="text/javascript" src="/js/youtube_search_control.js"></script>
<script type="text/javascript" src="/__cms/js/cms_artist_control.js"></script>