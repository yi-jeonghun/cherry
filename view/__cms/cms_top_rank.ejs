<html>
<head>
	<%- include('../common_resources.ejs') %>
	<script src="/js/util.js"></script>

	<!-- 순서 주위 -->
	<script type="text/javascript" src="/js/const/country_code.js"></script>
	<script type="text/javascript" src="/js/const/country_data.js"></script>
	<script type="text/javascript" src="/js/const/top_100_source.js"></script>
	<script type="text/javascript" src="/js/lang.js"></script>
	<!-- 순서 주위 -->

</head>
<body style="width: 100%; height: 100%;">
	<div id="id_div_main" style="height: 100%; width:100%; overflow: hidden;">
		<div class="border" style="height: 30px;">
			<div>
				<%- include('menu.ejs') %>
			</div>
		</div>

		<div class="border d-flex" style="height: 70px;">
			<div class="col-2 my-auto">
				<h5>Top Rank</h5>
			</div>
			<div class="col-2 my-auto">
				<div><h5 id="id_label_rank_title">Choose Rank</h5></div>
			</div>
			<div class="col-2 my-auto">
				<button type="button" class="border btn btn-sm" id="id_btn_cms_top_rank_filter_total" onclick="window._top_rank_control.OnClick_ChangeFilter(FILTER_TYPE.TOTAL)">Total</button>:<span id="id_label_total"></span>
				<button type="button" class="border btn btn-sm" id="id_btn_cms_top_rank_filter_ok" onclick="window._top_rank_control.OnClick_ChangeFilter(FILTER_TYPE.OK)">OK</button>:<span id="id_label_ok"></span>
				<button type="button" class="border btn btn-sm" id="id_btn_cms_top_rank_filter_ng" onclick="window._top_rank_control.OnClick_ChangeFilter(FILTER_TYPE.NG)">NG</button>:<span id="id_label_ng"></span>
			</div>
			<div class="col-6 my-auto text-right">
				<button type="button" class="btn btn-sm btn-primary" onclick="window._top_rank_control.ArrangeWindow()">ㅁ</button>
				<button type="button" class="btn btn-sm btn-primary" onclick="window._top_rank_control.Auto()">Auto</button>
				<button type="button" class="btn btn-sm btn-primary" onclick="window._top_rank_control.Save()" id="id_btn_save">Save</button>
				<button type="button" class="btn btn-sm btn-primary" onclick="window._top_rank_control.Release()">Release</button>
			</div>
		</div>

		<div class="d-flex" style="height: calc(100% - 100px); overflow: hidden;">
			<!-- LEFT -->
			<div class="border d-flex" style="width:50%; height: 100%;">
				<!-- 국가 리스트 -->
				<div class="col-3 border px-0">
					<div class="d-flex" style="margin-bottom: 3px;">
						<button type="button" id="id_btn_release_type_draft" onclick="window._top_rank_control.ToggleReleaseType()" class="btn btn-sm btn-primary">Draft</button>
						<button type="button" id="id_btn_release_type_release" onclick="window._top_rank_control.ToggleReleaseType()" class="btn btn-sm btn-outline-primary">Release</button>
					</div>
					<div class="px-0" id="id_div_country_list"></div>
				</div>

				<!-- Top 100 리스트 -->
				<div class="col-9 px-0 d-flex" style="height: 100%;">
					<div class="container-fluid" id="id_div_music_list" style="height:100%; overflow: auto;"></div>
				</div>
			</div>

			<!-- RIGHT -->
			<div class="border" style="width:50%; height: 100%;">
				<!-- PLAYER TEST -->
				<div id="id_div_play_test" class="d-flex" style="width: 100%; height: 100px;">
					<div id="player" class="border" style="width: 90; height: 90;"></div>
					<div>
						<i id="id_btn_play_pause" class="fas fa-play play_button_disabled" style="margin-left: 1px; margin-right: 1px; font-size: 2em;"></i>
					</div>
					<div class="border" style="width: 100%;">
						<div class="slider_line_div border" style="width: 100%; height: 20px; background-color: aqua;">
							<div class="slider_fill" id="id_slider_fill" style="height: 100%; width: 0%; background-color: red;	font-size: 2px;">&nbsp</div>
						</div>
						<div style="width: 100%;">
							<i class="fas fa-volume-up"></i>
							<input type="range" min="0" max="100" value="50" class="slider" id="id_slider_volume">
						</div>
						<div id="id_div_duration"></div>
					</div>
				</div>					

				<!-- ARTIST SEARCH / MUSIC SEARCH -->
				<div class="border" style="height: 200px; overflow: auto">
					<div class="d-flex">
						<div class="col-6">
							<ul class="nav nav-tabs small" style="font-size: 0.5em;">
								<li class="nav-item">
									<a class="nav-link active" style="cursor: pointer;" id="id_nav_cms_top_rank_artist" onClick="window._top_rank_control.OnClick_NavTab('artist')">Artist</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" style="cursor: pointer;" id="id_nav_cms_top_rank_music" onClick="window._top_rank_control.OnClick_NavTab('music')">Music</a>
								</li>
							</ul>	
						</div>
						<div class="col-6 text-right">
							<input class="small my-auto" type="text" id="id_input_cms_top_rank_artist_search">
							<span class="badge badge-sm badge-primary" style="cursor: pointer;" onClick="window._top_rank_control.OnClick_AddArtist()">Add</span>
							<span class="badge badge-sm badge-primary" style="cursor: pointer;" onClick="window._top_rank_control.OnClick_SearchArtist()">Search</span>
						</div>
					</div>
					<div id="id_div_cms_top_rank_artist_search_result"></div>
					<div id="id_div_cms_top_rank_music_search_result" style="display: none;"></div>
				</div>

				<!-- YOUTUBE SEARCH -->
				<div class="border" style="height: calc( 100% - 300px); overflow: auto; " id="id_div_youtube_search_result"></div>
			</div>
		</div>
	</div>
</body>

<script type="text/javascript" src="/js/youtube_iframe_player.js"></script>
<script type="text/javascript" src="/js/cherry_player.js"></script>
<script type="text/javascript" src="/js/youtube_search_control.js"></script>
<script type="text/javascript" src="/__cms/js/cms_top_rank_control.js"></script>
