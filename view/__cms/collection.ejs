<html>
<head>
	<%- include('../common_resources.ejs') %>
	<script type="text/javascript" src="/js/__cms/cms_collection_control.js"></script>
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<%- include('menu.ejs') %>
			</div>	
		</div>

		<div class="row">
			<div class="col-12">
				<h1>Collection</h1>
			</div>
			
			<div class="col-12 text-right">
				<!-- <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#id_modal_add_collection">Add Collection</button> -->
				<button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#id_modal_add_music">Add Music</button>
				<button type="button" class="btn btn-sm btn-primary" id="id_btn_save">Save</button>
			</div>		
		</div>

		<div class="row">
			<div class="col-4" style="border-right: 1px solid #aaaaaa;">
				<div id="id_link_kpop_top_100">
					<a style="cursor: pointer;" onclick="LoadKPopTop100()">KPop Top 100</a>
				</div>
				<div id="id_link_billboard_top_100">
					<a style="cursor: pointer;" onclick="LoadBillboardTop100()">Billboard Top 100</a>
				</div>
			</div>
			<div class="col-6">
				<div class="container-fluid" id="id_div_music_list">
				</div>
			</div>
		</div>


		<div class="row" id="id_div_collection_list">
		</div>
	</div>
</body>
</html>

<!-- Modal Add Collection -->
<div class="modal fade" id="id_modal_add_collection" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add Collection</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<form>
					<div class="form-group row">
						<label for="id_text_artist_name" class="col-sm-2 col-form-label">Name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="id_text_collection_name">
						</div>
					</div>
				</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="id_btn_add_ok">OK</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Add Music -->
<div class="modal fade" id="id_modal_add_music" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add Music</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<form>
					<div class="form-group row">
						<!-- <label for="id_text_artist_name" class="col-sm-2 col-form-label">Name</label> -->
						<div class="col-sm-8">
							<input type="text" class="form-control" id="id_text_keyword" placeholder="Search">
						</div>
						<div class="col-4">
							<button type="button" class="btn-sm btn-primary" id="id_btn_search_artist">Artist</button>
							<button type="button" class="btn-sm btn-primary" id="id_btn_search_title">Title</button>
						</div>
					</div>
				</form>
				<div class="container-fluid" id="id_searched_music_list">
				</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="id_btn_add_music_ok">OK</button>
      </div>
    </div>
  </div>
</div>